<h1>Task Information</h1>

<div class="container">
  <h2>Title: <%= @task.title %></h2>
  <p>Details: <%= @task.details %></p>
  <p>Completed: <%= @task.completed %></p>
  <p><%= link_to '✏️', edit_task_path(@task)  %></p>
  <p><%= link_to 'Delete', task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?" }%></p>
  <%= link_to 'Tasks', tasks_path %>
</div>
