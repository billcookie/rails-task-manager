<h1>Task Information</h1>

<div class="container">
  <h2>Title: <%= @task.title %></h2>
  <p>Details: <%= @task.details %></p>
  <p>Completed: <%= @task.completed %></p>
  <p class="btn btn-primary"><%= link_to 'Edit', edit_task_path(@task)  %></p>

  <p class="btn btn-success"><%= link_to 'Tasks', tasks_path %></p>
  <p class="btn btn-warning"><%= link_to 'Delete', task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?" }%></p>
</div>
